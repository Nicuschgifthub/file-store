<html>

<head>
    <title>Nicusch File List<%= data.admin ? ' -Admin-' : '' %>
    </title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #333;
            color: #fff;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            color: #fff;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th,
        td {
            padding: 8px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #007bff;
            color: #fff;
        }

        tr:nth-child(odd) {
            background-color: #363636;
        }

        tr:nth-child(even) {
            background-color: #464646;
        }

        a {
            text-decoration: none;
            color: #007bff;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>

<body>
    <div class="container">
        <% if (!isRoot) { %>
            <a href="<%= parentPath %>"
                style="color:white; background:#007bff; padding:5px 10px; border-radius:5px; text-decoration:none;">
                ‚Üê Back
            </a>
            <br><br>
            <% } %>
                <h1>
                    In Folder [<%= foldername %>] with
                        <% if (data.filesList.length===0) { %>
                            no files
                            <% } else if (data.filesList.length===1) { %>
                                1 item
                                <% } else { %>
                                    <%= data.filesList.length %> items
                                        <% } %>
                </h1>

                <table>
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Size</th>
                            <th>Created</th>
                            <th>Modified</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% data.filesList.forEach(item=> { %>
                            <tr>
                                <% if (item.type==='folder' ) { %>
                                    <td><a href="<%= item.filelink %>"><strong>
                                                <%= item.name %>
                                            </strong></a></td>
                                    <td>
                                        <%= item.size %>
                                    </td>
                                    <td>
                                        <%= item.created %>
                                    </td>
                                    <td>
                                        <%= item.modified %>
                                    </td>
                                    <td>Folder</td>
                                    <% } else { %>
                                        <td><a href="<%= item.filelink %>">
                                                <%= item.name %>
                                            </a></td>
                                        <td>
                                            <%= item.size %>
                                        </td>
                                        <td>
                                            <%= item.created %>
                                        </td>
                                        <td>
                                            <%= item.modified %>
                                        </td>
                                        <td>
                                            <%= item.type %>
                                        </td>
                                        <% } %>
                            </tr>
                            <% }); %>
                    </tbody>
                </table>
    </div>
</body>

</html>